@model Gathering
<div class="card mt-5">
    <div class="card-header bg-primary text-white">Create An Activity</div>
    <div class="card-body">
        <form action="/gathering/create" method="post">
            <div class="form-group">
                <label>Title:</label>
                <input asp-for="Title" class="form-control" />
                <span asp-validation-for="Title" class="text-primary"></span>
            </div>
            <div class="form-group">
                <label>Date & Time:</label>
                <input asp-for="Date" type="datetime-local" value="@DateTime.Now.ToString("MM/dd/yyyy h:mm tt")" class="form-control"/>
                <span asp-validation-for="Date" class="text-primary"></span>
            </div>
            <div class="row">
                <div class="col-2">
                    <div class="form-group">
                        <label>Duration:</label>
                        <input asp-for="DurationInt" class="form-control" />
                        <span asp-validation-for="DurationInt" class="text-primary"></span>
                    </div>
                </div>
                <div class="col-4">
                    <div class="form-group pt-2">
                        <label></label>
                        <select asp-for="DurationStr" class="form-control">
                            <option value="Hours">Hours</option>
                            <option value="Minutes">Minutes</option>
                            <option value="Days">Days</option>
                        </select>
                        <span asp-validation-for="DurationStr" class="text-primary"></span>
                    </div>
                </div>
                <div class="col-4">
                    <div class="form-group">
                        <label>Location:</label>
                        <input asp-for="Location" class="form-control" />
                        <span asp-validation-for="Location" class="text-primary"></span>
                    </div>
                </div>
            </div>
            <div class="form-group">
                <label>Description:</label>
                <textarea asp-for="Description" class="form-control" ></textarea>
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>
            <input type="submit" value="Create Activity" class="btn btn-outline-primary">
        </form>
    </div>
</div>